rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isPartner() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'partner';
    }
    
    function isTraveler() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'traveler';
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }
    
    // Travelers collection
    match /travelers/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isOwner(userId) || isAdmin();
    }
    
    // Partners collection
    match /partners/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }
    
    // Listings collection
    match /listings/{listingId} {
      // Anyone can read approved listings, owners can read their own
      allow read: if true;
      
      // Authenticated users can create listings if they are the partner
      allow create: if isAuthenticated() && 
                       request.resource.data.partnerId == request.auth.uid &&
                       request.resource.data.status == 'pending';
      
      // Partners can update their own listings, admins can approve/reject
      allow update: if (isAuthenticated() &&
                       resource.data.partnerId == request.auth.uid &&
                       request.resource.data.partnerId == resource.data.partnerId) ||
                       isAdmin();
      
      // Partners can delete their own listings, admins can delete any
      allow delete: if (isAuthenticated() && resource.data.partnerId == request.auth.uid) ||
                       isAdmin();
    }
    
    // Bookings collection (for future use)
    match /bookings/{bookingId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAdmin();
    }
    
    // Reviews collection (for future use)
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if isAuthenticated();
      allow update: if isOwner(resource.data.userId) || isAdmin();
      allow delete: if isOwner(resource.data.userId) || isAdmin();
    }
  }
}
