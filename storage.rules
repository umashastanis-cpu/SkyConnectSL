rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to read all images
    match /{allPaths=**} {
      allow read: if request.auth != null;
    }
    
    // Allow travelers to upload/update their own profile photos
    match /travelers/{userId}/{allFiles=**} {
      allow write: if request.auth != null && 
                      request.auth.uid == userId;
      allow delete: if request.auth != null && 
                       request.auth.uid == userId;
    }
    
    // Allow partners to upload their logos and documents
    match /partners/{userId}/{allFiles=**} {
      allow write: if request.auth != null && 
                      request.auth.uid == userId;
      allow delete: if request.auth != null && 
                       request.auth.uid == userId;
    }
    
    // Allow partners to upload images to their own listings
    match /listings/{partnerId}/{listingId}/{allFiles=**} {
      allow write: if request.auth != null && 
                      request.auth.uid == partnerId;
      allow delete: if request.auth != null && 
                       request.auth.uid == partnerId;
    }
    
    // Allow admins to delete any images (keep this for admin management)
    match /{allPaths=**} {
      allow delete: if request.auth != null &&
                       firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
